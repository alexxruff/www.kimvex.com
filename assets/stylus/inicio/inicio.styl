.menu
  width 100%
  //height 100px
  padding 0
  position fixed
  top 0
  z-index 1001
  background-color #fff //#f3f3f3
  box-shadow rgba(0, 0, 0, .5) 0px 5px 10px
  .opciones-menu
    width 100%
    margin 0
    padding 0
    display flex
    display -webkit-flex
    display -moz-flex
    flex-direction row
    justify-content center
    align-items center
    list-style none
    .menu-logo
      width 30%
      display flex
      justify-content flex-start
      align-items center
      text-align center
      img
        width 210px
        height 70px
        transition .4s
        &:hover
          width 170px
          height 55px
          transition .4s
    .item
      a
        display block
        padding 1.5em 1em
        text-decoration none
        font-size 1.1em
        text-transform uppercase
        color rgba(11, 187, 121, 1)
        margin-right 1em
        font-family 'Source Sans Pro', sans-serif
        font-weight 400
        transition .4s
        -webkit-transition .4s
        -moz-transition .4s
        //border-bottom .1em solid transparent
        &:hover
          //border-bottom .1em solid white
          background-color rgba(11, 187, 121, 1)
          color white
          border-radius 5px
          transition .4s
          -webkit-transition .4s
          -moz-transition .4s
      
    .menu-sobre
      position absolute
      overflow scroll
      top 80px
      left 0
      width 100%
      height 100vh
      z-index 1003
      background rgba(11, 187, 121, .8)//rgba(51,51,51,.9)
      transition all 0.5s
      transform translateX(-100%)
      padding 0
      margin 0
      display 
      list-style none
      .m-m
        display block
        width 100%
        height 18%
        border-bottom 1px solid rgba(255, 255, 255, .5)
        display flex
        flex-direction column
        align-items center
        justify-content center
        a
          width 100%
          text-decoration none
          font-size 1.5rem
          color #fff
          font-family 'Montserrat'
          text-align center
    
    #menu-bar
      display none
    label
      display none
      position absolute
      z-index 1003
      top 12px
      right 15px
      font-size 2.5rem
      color rgba(11, 187, 121, 1)
    #menu-bar:checked ~ .menu-sobre
      transform translateX(0%)
      -webkit-transform translateX(0%)
      -moz-transform translateX(0%)
      -o-transform translateX(0%)
      
.cabecera
  width 100%
  height 110%
  background-color rgba(0, 0, 0, .5)
  //border-bottom 1em solid rgba(0, 0, 0, .3)
  padding-top 200px
  video
    position fixed
    min-width 100%
    min-height 100%
    top 50%
    left 50%
    transform translateX(-50%) translateY(-50%)
    z-index -1
  .titulo
    color white
    text-align center
    font-family 'Source Sans Pro', sans-serif
    font-weight 700
    display flex
    flex-direction column
    align-items center
    justify-content center
    .titulo-kimvex
      font-size 10em
      margin-bottom .2em
      margin-top 0
      text-align center
    .subtitulo
      font-size 1.4em
      font-weight 400
      margin 0
      text-align center
      text-shadow 0em 0em 0em #000
      width
    img
      width 600px
      height 50px

.servicios
  width 100%
  height 160%
  background url('../img/servicio.jpg') no-repeat
  background-size cover
  background-attachment fixed
  padding 0
  margin 0
  .servicios-dif
    width 100%
    height 100%
    background-color rgba(0, 0, 0, .75)
    display flex
    flex-direction column
    justify-content center
    align-items center
    h3
      width 100%
      padding 100px 0 1rem 0
      margin 0
      font-size 2rem
      font-family 'Montserrat'
      font-weight 400
      color #fff
      text-align center
      white-space pre-wrap
    .cont-servicios
      width 80%
      height 80%
      display flex
      justify-content space-around
      align-items space-around
      flex-wrap wrap
      .item-servicio
        list-style none
        width 30%
        height 45%
        //border 2px solid white
        display flex
        flex-direction column
        justify-content space-around 
        align-items center
        img
          width 270px
          height 270px
          border-radius 50%
          animation-name regresa
          animation-duration .5s
          &:hover
            animation-name girar
            animation-duration .5s
            //animation-timing-function linear

        span
          color #fff
          font-family 'Montserrat'
          font-size 1.1rem
          text-align center
         
@keyframes girar {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}
@keyframes regresa {
  from {
    transform: rotate(360deg);
  }
  to {
    transform: rotate(0deg);
  }
}


