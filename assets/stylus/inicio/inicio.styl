.ir-arriba
  display none
  position fixed
  padding .5em
  bottom 5%
  right 3%
  border none
  background #004d40
  color white
  font-weight 700
  border-radius 3px
  outline 0
  cursor pointer
  width 30px
  height 30px
  background url("../img/flecha-verde.png")
  background-size cover
  
.menu
  width 100%
  position fixed
  top 0
  .opciones-menu
    width 100%
    margin 0
    padding 0
    display flex
    display -webkit-flex
    display -moz-flex
    flex-direction row
    justify-content flex-end
    list-style none
    .item
      a
        display block
        padding 1.5em
        text-decoration none
        font-size 1.1em
        text-transform uppercase
        color rgba(11, 187, 121, 1)
        margin-right 1em
        font-family 'Source Sans Pro', sans-serif
        font-weight 400
        transition .4s
        -webkit-transition .4s
        -moz-transition .4s
        border-bottom .1em solid transparent
        &:hover
          border-bottom .1em solid white
          transition .4s
          -webkit-transition .4s
          -moz-transition .4s
